<!DOCTYPE html>
<html>

<head>
	<title>Blackjack</title>
	<!-- CDN scripts -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/2.0.6/velocity.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/velocity/2.0.6/velocity.ui.min.js"></script>
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
	<script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <!-- jquery ui lib -->
	<script src="jquery-ui-1.12.1/external/jquery/jquery.js"></script>
	<script src="jquery-ui-1.12.1/jquery-ui.min.js"></script>
	<!-- slick ui lib -->
	<script type="text/javascript" src="slick/slick.min.js"></script>
	<!-- stylesheets -->
	<link rel="stylesheet"  href="js/jquery-ui-1.12.1/jquery-ui.min.css">
	<link rel="stylesheet" type="text/css" href="../slick/slick.css"/>
	<link rel="stylesheet" type="text/css" href="../slick/slick-theme.css"/>
	<link rel="stylesheet" href="css/style.css">
	<link href='https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:500,500italic|Exo+2:400,100,400italic' rel='stylesheet' type='text/css'>
</head>

<title>Blackjack</title>

<body>
	<header class="header-container">
		<h1 class="header-title">Strategic</h1><br>
		<h1 class="header-title">   Blackjack!</h1>
		<!--  <img src="assets/table-images/header-cards-1.jpg" alt="blackjack cards image" id="header-cards-2"> -->
	</header>
	<nav>
		<a href="./home">Home</a>
		<a href="<%= userBarId ? userBarId : '' %>">My Account</a>
		<a href="./rules">Rules</a>
		<a href="./about">About</a>
		<% if (userLogged) { %>
			 	<a href="/user/logout">Logout</a>
			 	<h5 id="nav-message"><%= navMessage %></h5>
		<% } else { %>
				<a href="/user/register">Login/Sign Up</a>%>
		<% } %>
		<!-- <h5 id="nav-message"><%= userLogged ? `LoggedIn as ${username}` : ''%></h5> -->
	</nav>

    <br><span><%= messageDev %></span>
    <br><span class="" id="#session-message-span"><%= message %></span>

	<div class="dealer-heading">
		<h3> -- Dealer -- </h3><br><!--
    --><img src="assets/table-images/dealer-img-1.jpg" alt="Image of Karina 		   the blackjack dealer" id="dealer-img"><!--
     --><p id="dealer-name">Katrina</p>
	</div>

	<div class="card-container" id="dealer-container">
		<div id="dealer-cards">
			<span class="dealer-card" id="card-one">
			<img src="assets/card-reverse-images/playing-cards-reverse-img	.jpeg" class="card dealer-card" id="dealer-card-reverse"></img></span>
			<div class="dealer-card" id="dealer-card-two"></div><!--
			--><div class="dealer-card" id="dealer-hit-cards"></div>
		</div>
	</div>

	<div class="message message-box" id="dealer-message"></div>

	<div class="message-container">
		<div class="message-box" id="player-1-message"></div>
    <div class="message-box" id="player-2-message"></div>
	</div>

	<div class="center-logo-container">
		<img src="assets/table-images/abs-circ-6.png" alt="center table circle logo" id="center-logo">
		<!--    <h3 id="center-logo-text">Strategic Blackjack</h3> -->
	</div>

	<div class="strategy-btn-container">
	  <button id="strategy-btn-one">Strategy Hint</button>
	  <button id="odds-btn-one">Get Odds</button>
	  <button id="count-btn-one">Check the Count</button>
	  <button id="count-btn-two">Check the Count</button>
	  <button id="odds-btn-two">Get Odds</button>
	  <button id="strategy-btn-two">Strategy Hint</button>
	</div>

	<!-- <div class="new-deal-container">
		<button id="deal-button"> Deal 'em </button>
	</div> -->

	<div class="player-container hit-card-container hit-cards">
    <div class="card-container hit-card-container">
			<div id="player-1-hit-cards">
				<div class="card hit-card" id="hit-cards-one"></div>
			</div>

			<div id="player-2-hit-cards">
				<div class="card hit-card" id="hit-cards"></div>
			</div>
		</div>
	</div>

	<div class="player-image-container">
		<div id="player-1-id">
		    <img src="assets/table-images/player-1-img.png" alt="avatar image 		for player one Svetlana" id="player-1-image"></img><!--
		 --><h3 class="player-name" id="player-1-name"><%= username ? username : 'Guest' %></h3>
		</div>
		<div id="player-2-id">
		    <h3 class="player-name" id="player-2-name">Raul</h3><!--
		 --><img src="assets/table-images/player-2-img.png" alt="avatar image for player two Raul" id="player-2-image"></img>
		</div>
	</div>

	<h3></h3><!--
	--><h3></h3>
	</div>

	<div class="chip-total-box-container">
		<p id="chip-box-label-one"></p>
		<div id="chip-total-player-one-box">
			<div class="chip-total-player-1"></div>
		</div><!--
	 --><p id="chip-box-label-two"></p>
	 	<div id="chip-total-player-two-box">
	 		<div class="chip-total-player-2"></div>
	 	</div>
	</div>

	<div class="bet-box-container">
  	<p id="bet-box-one-label">Bet</p>
  		<div class="bet-box-1">
    			<div id="bet-player-1"></div>
  		</div><!--
<--><p id="bet-box-two-label">Bet</p>
			<div class="bet-box-2">
				<div id="bet-player-2"></div>
			</div>
	</div>

	<div class="card-container">
		<div class="card-container">
			<div class="action-btn" id="player-one-action-container">
				<h4>Play</h4>
					<button class="btn hit-btn"  id="hit-btn-one">Hit</button>
					<button class="btn stay-btn" id="stay-btn-one">Stay</button>
	        <button class="btn split-btn" id="split-btn-one">Split</button>
	        <button class="btn double-btn" id="dbl-btn-one">Double</button>
			</div>
			<div class="action-btn" id="player-one-bet-container">
				<h4>Bet</h4>
					<button class="btn bet-btn" id="bet-btn-one">Bet</button>
					<button class="btn clr-bet-btn" id="clr-bet-btn-one">Clear Bet</button>
					<button class="btn plc-bet-btn" id="plc-bet-btn-one">Place Bet</button>
			</div>

			<div class="player-cards-container">
				<div class="player-cards" id="player-1-cards">
					<div class="card card-one"></div>
					<div class="card card-two"></div>
				</div>
				<div class="player-cards" id="player-2-cards">
					<div class="card card-one"></div>
					<div class="card card-two"></div>
				</div>
	  	</div>
	  	<div class="action-btn" id="player-two-bet-container">
				<h4>Bet</h4>
					<button class="btn bet-btn"  id="bet-btn-two">Bet</button>
					<button class="btn clr-bet-btn" id="clr-bet-btn-two">Clear Bet</button>
					<button class="btn plc-bet-btn" id="plc-bet-btn-two">Place Bet</button>
			</div>
			<div class="action-btn" id="player-two-action-container">
				<h4>Play</h4>
					<button class="btn hit-btn"  id="hit-btn-two">Hit</button>
					<button class="btn stay-btn" id="stay-btn-two">Stay</button>
		    	<button class="btn split-btn" id="split-btn-two">Split</button>
		    	<button class="btn double-btn" id="dbl-btn-two">Double</button>
			</div>
		</div>
	</div>
	<div class="container table-content">
		<footer class="footer">
			<small>&copy petermccallmurray, 2019</small>
		</footer>
	</div>
</body>
